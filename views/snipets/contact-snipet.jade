//- Contact Secction
section.presentation.contact-pres#sectionContact
	div.center-content.text-center
		div.col-md-8.col-md-offset-2 
			h2 Your Details
			form
				div.col-md-4
					div.form-group
						input.form-control.input-lg#user-email(type="text", placeholder="Enter Name")
				div.col-md-4
					div.form-group
						input.form-control.input-lg#user-email(type="email", placeholder="Email")
				div.col-md-4
					div.form-group
						input.form-control.input-lg#user-subject(type="phone", placeholder="Phone Number")
				div.col-md-6.col-md-offset-3
					div.form-group
						h2 Brief Description
						textarea.form-control#user-desc(rows="6")
			div.col-md-4.clear-top
				div.icon-images
					h3 Submit Info
					img.contact-icon#mail(src="/images/contact/mail.svg")
			div.col-md-4.clear-top
				div.icon-images
					h3 Connect With Me
					img.contact-icon#connect(src="/images/contact/connect.svg")
					div.col-md-12
						div.col-md-3
							a(href="https://github.com/victor-basurto")
								img.social-media-icon.no-show#git-hub(src="/images/contact/social-media/github-icon.png")
						div.col-md-3
							a(href="https://www.linkedin.com/in/victorBasurto")
								img.social-media-icon.no-show#linked-in(src="/images/contact/social-media/linkedin.png")
						div.col-md-3
							a(href="https://plus.google.com/u/0/+VicBA")
								img.social-media-icon.no-show#google-plus(src="/images/contact/social-media/googleplus-icon.png")
						div.col-md-3
							a(href="https://twitter.com/DroidVic")
								img.social-media-icon.no-show#twitter(src="/images/contact/social-media/twitter.png")
			div.col-md-4.clear-top
				div.icon-images
					h3 Download Resume
					a(href="/resume/VictorResume2015.pdf" download="VictorResume2015")
						img.contact-icon#pdf(src="/images/contact/pdf.svg")